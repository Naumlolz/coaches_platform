<h1>Profile</h1>

<%= form_with model: current_coach, url: coaches_update_profile_path, method: :post do |f|%>
  <% if @errors.present? %>
    <div class="alert alert-danger" role="alert">
      <%= @errors %>
    </div>
  <% end %>

  <% if current_coach.avatar.attached? %>
    <%= image_tag current_coach.avatar %>
  <% end %>

  <div class="form-group">
    <label for="avatar">Avatar</label>
    <%= f.file_field :avatar, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label for="first_name">First Name</label>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label for="last_name">Last Name</label>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label for="age">Age</label>
    <%= f.text_field :age, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label for="description">Education</label>
    <%= f.text_field :education, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label for="description">Work experience</label>
    <%= f.text_field :experience, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label for="description">Licences and certificates</label>
    <%= f.text_field :certificate, class: 'form-control' %>
  </div>
  <%= f.submit 'Update', class: 'btn btn-primary' %>
<% end %>
<br>
<h3>Areas of Expertise</h3>
<%= form_with scope: :coach, url: update_expertise_coaches_path, method: :post do |f|%>
  <div class="form-check">
    <%= f.collection_check_boxes :program_ids, Program.all, :id, :name do |c| %>
      <%= c.check_box %>
      <%= c.label %><br>
    <% end %>
  </div>
  <%= f.submit 'Save', class: 'btn btn-primary' %>
<% end %>