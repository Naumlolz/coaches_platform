<span class="navbar-text">
  Hello, <%= current_coach.first_name %> <%= current_coach.last_name %>
</span>
<%= form_with url: coaches_finish_coach_profile_path, method: :post do |f|%>
  <div class="form-group">
    <label for="age">Age</label>
    <%= f.text_field :age, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label for="gender">Gender</label>
    <%= f.select :gender, ['male', 'female'], class: 'form-control' %>
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label for="description">Education</label>
    <%= f.text_field :education, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label for="description">Work experience</label>
    <%= f.text_field :experience, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label for="description">Licences and certificates</label>
    <%= f.text_field :certificate, class: 'form-control' %>
  </div>
  <%= f.submit 'Get started', class: 'btn btn-primary'%>
<% end %>