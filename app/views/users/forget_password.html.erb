<%= form_with url: passwords_send_code_path, method: :get do |f|%>
  <div class="col-md-6">
    <div class="form-group">
      <label for="email">Email:</label>
      <%= f.text_field :email, class: 'form-control', placeholder: 'name@example.com' %>
    </div>
    <%= f.submit 'Send code', class: 'btn btn-primary'%>
  </div>
<% end %>